{{> adminTemplate}}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Manage Workforce</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item active"><a href="/admin/dashboard">Dashboard</a></li>
                <li class="breadcrumb-item active">Manage Workforce</li>
            </ol>
        </nav>
    </div>

    <section class="section dashboard">
        <div class="row">

            <div class="col-lg-12">
                <div class="row">

                    <!-- Applicants Table -->
                    <div class="col-12">
                        <div class="card recent-sales overflow-auto">
                            <div class="card-body">
                                <h5 class="card-title">Applicants <span>| Eligible Hires</span></h5>
                                <table class="table table-borderless table-striped datatable">
                                    <thead>
                                        <tr>
                                            <th scope="col">ID #</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Out Date</th>
                                            <th scope="col">Custody</th>
                                            <th scope="col">Facility</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each applicants}}
                                            <tr>
                                                <th scope="row"><a
                                                        href="/clearance/residentProfile/{{this.residentID}}">{{this.residentID}}</a>
                                                </th>
                                                <td class="text-capitalize"><a
                                                        href="/clearance/residentProfile/{{this.residentID}}">
                                                        {{this.firstName}} {{this.lastName}}</a></td>
                                                <td class="text-capitalize"><a
                                                        href="/clearance/residentProfile/{{this.residentID}}">
                                                        {{formatDate this.outDate}}</a></td>

                                                <td class="text-capitalize"><a
                                                        href="/clearance/residentProfile/{{this.residentID}}">{{this.custodyLevel}}</a>
                                                </td>
                                                <td class="text-capitalize">{{this.facility}}</td>
                                            </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- Interviews Table -->
                    <div class="col-12">
                        <div class="card recent-sales overflow-auto">
                            <div class="card-body">
                                <h5 class="card-title">Interviews <span>| Requested</span></h5>
                                <table class="table table-borderless table-striped datatable">
                                    <thead>
                                        <tr>
                                            <th scope="col">ID #</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Company</th>
                                            <th scope="col">Requested</th>
                                            <th scope="col">Scheduled</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each interviews}}
                                            <tr>
                                                <th scope="row"><a
                                                        href="/clearance/residentProfile/{{this.residentID}}">{{this.residentID}}</a>
                                                </th>
                                                <td class="text-capitalize"><a
                                                        href="/clearance/residentProfile/{{this.residentID}}">
                                                        {{this.name}}</a></td>

                                                <td class="text-capitalize">
                                                    <a href="/clearance/residentProfile/{{this.residentID}}">
                                                        {{this.companyName}}</a>
                                                </td>
                                                {{#if this.isRequested}}
                                                    <td><span class="badge bg-success">{{formatDate
                                                    this.dateRequested}}</span></td>
                                                {{else}}
                                                    <td>No</td>
                                                {{/if}}

                                                {{#if this.dateScheduled}}
                                                    <td>{{formatDate this.dateScheduled}}</td>
                                                {{else}}
                                                    <td>No</td>
                                                {{/if}}



                                            </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- Employees Table -->
                    <div class="col-12">
                        <div class="card recent-sales overflow-auto">
                            <div class="card-body">
                                <h5 class="card-title">Employees <span>| Workforce</span></h5>
                                <table class="table table-borderless table-striped datatable">
                                    <thead>
                                        <tr>
                                            <th scope="col">ID #</th>
                                            <th scope="col">Facility</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Out Date</th>
                                            <th scope="col">Date Hired</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each employees}}
                                            <tr>
                                                <th scope="row">
                                                    <a
                                                        href="/clearance/residentProfile/{{this.residentID}}">{{this.residentID}}</a>
                                                </th>
                                                <td class="text-capitalize">
                                                    <a
                                                        href="/clearance/residentProfile/{{this.residentID}}">{{this.facility}}</a>
                                                </td>
                                                <td class="text-capitalize">
                                                    <a href="/clearance/residentProfile/{{this.residentID}}">{{this.firstName}}
                                                        {{this.lastName}}</a>
                                                </td>
                                                <td class="text-capitalize">
                                                    <a href="/clearance/residentProfile/{{this.residentID}}">{{formatDate
                                                    this.outDate}}</a>
                                                </td>
                                                <td class="text-capitalize">
                                                    <a
                                                        href="/clearance/residentProfile/{{this.residentID}}">{{formatDate this.dateHired}}</a>
                                                </td>


                                            </tr>

                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
</main>
<!-- ======= Footer ======= -->
{{> footer}}
{{> arrowUp}}