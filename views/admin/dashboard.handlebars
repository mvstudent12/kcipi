{{> adminTemplate}}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Admin Dashboard</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item active">Dashboard</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section dashboard">
        <div class="row">

            <!-- Dashboard Cone -->
            <div class="col-lg-12">
                <div class="row">

                    <!-- Residents Card -->
                    <div class="col-xxl-4 col-md-4">
                        <div class="card info-card customers-card">
                            <div class="card-body">
                                <h5 class="card-title">Residents <span>| All KDOC</span></h5>
                                <div class="d-flex align-items-center">
                                    <div
                                        class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="bi bi-people"></i>
                                    </div>
                                    <div class="ps-3">
                                        <h6>{{countItems caseLoad}}</h6>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div><!-- End Residents Card -->

                    <!-- Resumes Count Card -->
                    <div class="col-xxl-4 col-md-4">
                        <div class="card info-card sales-card">

                            <div class="card-body">
                                <h5 class="card-title">Resumes <span>| Pending</span></h5>

                                <div class="d-flex align-items-center">
                                    <div
                                        class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="bi bi-clipboard-check"></i>
                                    </div>
                                    <div class="ps-3">
                                        <h6>{{countArrayItems resumeNeedReview}}
                                        </h6>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div><!-- End Resumes Count Card -->

                    <!-- Applicants Card -->
                    <div class="col-xxl-4 col-md-4">
                        <div class="card info-card revenue-card">

                            <div class="card-body">
                                <h5 class="card-title">Applicants <span>| To Review</span></h5>

                                <div class="d-flex align-items-center">
                                    <div
                                        class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="bi bi-card-list"></i>
                                    </div>
                                    <div class="ps-3">
                                        <h6>{{countArrayItems allJobApplicants}}</h6>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div><!-- End Applicants Card -->



                    {{!-- Data Tables Section --}}

                    <!-- Residents Table -->
                    <div class="col-12">
                        <div class="card recent-sales overflow-auto">
                            <div class="card-body">
                                <h5 class="card-title">Residents <span>| All KDOC</span></h5>
                                <table class="table table-borderless datatable">
                                    <thead>
                                        <tr>
                                            <th scope="col">ID #</th>
                                            <th scope="col">Facility</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Resume</th>
                                            <th scope="col">Work Status</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each caseLoad}}
                                        <tr>
                                            <th scope="row"><a
                                                    href="/clearance/residentProfile/{{this.residentID}}">{{this.residentID}}</a>
                                            </th>
                                            <td class="text-capitalize">{{this.facility}}</td>
                                            <td class="text-capitalize"><a
                                                    href="/clearance/residentProfile/{{this.residentID}}">{{this.firstName}}
                                                    {{this.lastName}}</a></td>

                                            {{#if this.resumeIsApproved}}
                                            <td><span class="badge bg-success">Approved</span></td>
                                            {{else}}
                                            {{#if this.resumeRejectionReason}}
                                            <td><span class="badge bg-danger">Rejected</span></td>
                                            {{else}}
                                            {{#if this.resumeIsComplete}}
                                            <td><span class="badge bg-warning">Pending</span></td>
                                            {{else}}
                                            <td><span class="badge bg-secondary">None</span></td>
                                            {{/if}}
                                            {{/if}}
                                            {{/if}}

                                            {{#if this.isEligibleToWork}}
                                            <td><span class="badge bg-success">Eligible</span></td>
                                            {{else}}
                                            {{#if this.isRestrictedFromWork}}
                                            <td><span class="badge bg-danger">Restricted</span></td>
                                            {{else}}
                                            <td><span class="badge bg-secondary">None</span></td>
                                            {{/if}}
                                            {{/if}}

                                        </tr>

                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div><!-- End Residents Table -->

                    <!-- Resume Table -->
                    <div class="col-12">
                        <div class="card recent-sales overflow-auto">
                            <div class="card-body">
                                <h5 class="card-title">Resumes <span>| To Approve</span></h5>
                                <table class="table table-borderless datatable">
                                    <thead>
                                        <tr>
                                            <th scope="col">ID #</th>
                                            <th scope="col">Facility</th>
                                            <th scope="col">Resident</th>
                                            <th scope="col">Date</th>
                                            <th scope="col">Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each caseLoad}}
                                        {{#unless this.resumeIsApproved}}
                                        {{#if this.resumeIsComplete}}
                                        <tr>
                                            <th scope="row"><a
                                                    href="/unitTeam/residentProfile/{{this.residentID}}">{{this.residentID}}</a>
                                            </th>
                                            <td class="text-capitalize">{{this.facility}}</td>
                                            <td><a href="/unitTeam/residentProfile/{{this.residentID}}"
                                                    class="text-primary text-capitalize">{{this.firstName}}
                                                    {{this.lastName}}</a></td>
                                            <td>{{formatDate this.resume.dateCreated}}</td>
                                            {{#if this.resumeRejectionReason}}
                                            <td><span class="badge bg-danger">Rejected</span></td>
                                            {{else}}
                                            <td><span class="badge bg-warning">Pending</span></td>
                                            {{/if}}

                                        </tr>
                                        {{/if}}
                                        {{/unless}}
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div><!-- End Resume Table -->

                    <!-- Applicants Table -->
                    <div class="col-12">
                        <div class="card recent-sales overflow-auto">
                            <div class="card-body">
                                <h5 class="card-title">Applicants <span>| To Review</span></h5>
                                <table class="table table-borderless datatable">
                                    <thead>
                                        <tr>
                                            <th scope="col">ID #</th>
                                            <th scope="col">Facility</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Custody</th>
                                            <th scope="col">Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each allJobApplicants}}
                                        <tr>
                                            <th scope="row"><a
                                                    href="/unitTeam/residentProfile/{{this.residentID}}">{{this.residentID}}</a>
                                            </th>
                                            <td class="text-capitalize">{{this.facility}}</td>

                                            <td><a href="/unitTeam/residentProfile/{{this.residentID}}"
                                                    class="text-primary text-capitalize">{{this.firstName}}
                                                    {{this.lastName}}</a></td>

                                            <td class="text-capitalize">{{this.custodyLevel}}</td>

                                            <td><span class="badge bg-warning">Pending</span></td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div><!-- End Applicants Table -->



                    {{!-- End of Data Tables Section --}}

                </div>
            </div><!-- End Dashboard Cone -->

        </div>
    </section>
</main><!-- End #main -->

<!-- ======= Footer ======= -->
{{> footer}}

{{> arrowUp}}