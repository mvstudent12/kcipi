{{> adminTemplate}}

<main id="main" class="main">

    <div class="pagetitle">
        <h1 class="text-capitalize">{{admin.firstName}} {{admin.lastName}}</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="admin/dashboard">Dashboard</a></li>
                <li class="breadcrumb-item active">Admin Profile</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section profile">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">
                        <img src="/assets/img/avatar.png" alt="Profile" class="rounded-circle">
                        <h2 class="text-capitalize mb-3">{{admin.firstName}} {{admin.lastName}}</h2>
                        <h3>Admin</h3>

                    </div>
                </div>
            </div>

            <div class="col-12">

                <div class="card">
                    <div class="card-body pt-3">
                        <!-- Bordered Tabs -->
                        <ul class="nav nav-tabs nav-tabs-bordered">
                            <li class="nav-item">
                                <button class="nav-link {{#if (eq activeTab 'overview')}}active{{/if}}"
                                    data-bs-toggle="tab" data-bs-target="#profile-overview">Overview</button>
                            </li>
                            <li class="nav-item">
                                <button class="nav-link {{#if (eq activeTab 'contact')}}active{{/if}}"
                                    data-bs-toggle="tab" data-bs-target="#contact-admin">Contact</button>
                            </li>

                        </ul>

                        <div class="tab-content pt-2">

                            <div class="tab-pane fade {{#if (eq activeTab 'overview')}}show active{{/if}} profile-overview pt-3"
                                id="profile-overview">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">Admin Information</h5>
                                        <div class="row">
                                            <div class="col-lg-4 col-md-4 label ">Full Name</div>
                                            <div class="col-lg-8 col-md-8 text-capitalize">{{admin.firstName}}
                                                {{admin.lastName}}
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-lg-4 col-md-4 label">Email</div>
                                            <div class="col-lg-8 col-md-8 ">{{admin.email}}</div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            {{!-- Contact Admin --}}
                            <div class="tab-pane fade {{#if (eq activeTab 'contact')}}show active{{/if}} contact-admin pt-3"
                                id="contact-admin">
                                <div class="card">
                                    <div class="card-body">
                                        {{!-- DO THIS FUNCTIONALITY LATER --}}
                                        {{#if (eq admin.email user.email)}}
                                            <p class="text-center mt-3">This profile belongs to you.</p>
                                        {{else}}
                                            <form class="mt-3" method="POST" action="#">
                                                <div class="row gy-4">
                                                    <h3 class="text-center text-info text-capitalize">Contact
                                                        {{admin.firstName}}
                                                        {{admin.lastName}}
                                                    </h3>
                                                    <p class="text-center">Fill out the form below to contact <span
                                                            class="text-capitalize">{{admin.firstName}}</span>.
                                                    </p>
                                                    <div class="col-md-6">
                                                        <input type="text" name="name"
                                                            value="{{user.firstName}} {{user.lastName}}"
                                                            class="form-control text-capitalize"
                                                            placeholder="{{user.firstName}} {{user.lastName}}" readonly>
                                                    </div>
                                                    <div class="col-md-6 ">
                                                        <input type="email" class="form-control" name="email"
                                                            placeholder="{{user.email}}" value="{{user.email}}"
                                                            readonly>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <input type="text" class="form-control" name="subject"
                                                            placeholder="Subject" required>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <textarea class="form-control" name="message" rows="6"
                                                            placeholder="Message" required></textarea>
                                                    </div>
                                                    <div class="col-md-12 text-center">
                                                        <button class="btn btn-primary" type="submit">Send</button>
                                                    </div>
                                                </div>

                                            </form>
                                        {{/if}}
                                    </div>
                                </div>

                            </div>

                        </div><!-- End Bordered Tabs -->
                    </div>
                </div>
            </div>
        </div>
    </section>
</main><!-- End #main -->

<!-- ======= Footer ======= -->
{{> footer}}

{{> arrowUp}}