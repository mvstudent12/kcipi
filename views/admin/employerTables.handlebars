{{> adminTemplate}}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Employers Data</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item active"><a href="/admin/dashboard">Dashboard</a></li>
                <li class="breadcrumb-item active">Employers Data</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section dashboard">
        <div class="row">

            <!-- Dashboard Cone -->
            <div class="col-lg-12">
                <div class="row">

                    {{!-- Data Tables Section --}}
                    <!-- Employers Table -->
                    <div class="col-12">
                        <div class="card recent-sales overflow-auto">
                            <div class="card-body">
                                <h5 class="card-title">Employers <span>| All KDOC</span></h5>
                                <table class="table table-borderless datatable">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Company</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Email</th>
                                            <th scope="col">Role</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each employers}}
                                        <tr>
                                            <th scope="row"><a href="/admin/employerProfile/{{this._id}}">{{add
                                                    @index 1}}</a>
                                            </th>
                                            <td class="text-capitalize">{{this.company}}</td>
                                            <td class="text-capitalize"><a href="/admin/employerProfile/{{this._id}}">
                                                    {{this.firstName}} {{this.lastName}}</a></td>

                                            <td><a href="/admin/employerProfile/{{this._id}}">{{this.email}}</a></td>
                                            <td class="text-capitalize">{{this.role}}</td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- End Employers Table -->
                    {{!-- End of Data Tables Section --}}
                </div>
            </div><!-- End Dashboard Cone -->
        </div>
    </section>
</main><!-- End #main -->
<!-- ======= Footer ======= -->
{{> footer}}
{{> arrowUp}}