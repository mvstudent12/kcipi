{{> adminTemplate}}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Classification Database</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
                <li class="breadcrumb-item active">Classification Database</li>
            </ol>
        </nav>
    </div>

    <section class="section profile">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">
                        <img src="/assets/img/employer.png" alt="Profile" class="rounded-circle">
                        <h2 class="text-capitalize mb-3">Classification Database</h2>
                        <h3>KDOC Employees</h3>

                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="card">
                    <div class="card-body pt-3">
                        <ul class="nav nav-tabs nav-tabs-bordered">
                            <li class="nav-item">
                                <button class="nav-link {{#if (eq activeTab 'add')}}active{{/if}}" data-bs-toggle="tab"
                                    data-bs-target="#add-classification">Add
                                    Member</button>
                            </li>
                            <li class="nav-item">
                                <button class="nav-link {{#if (eq activeTab 'edit')}}active{{/if}}" data-bs-toggle="tab"
                                    data-bs-target="#edit-classification">Edit
                                    Member</button>
                            </li>
                            <li class="nav-item">
                                <button class="nav-link {{#if (eq activeTab 'all')}}active{{/if}}" data-bs-toggle="tab"
                                    data-bs-target="#all-classification">All
                                    Members</button>
                            </li>

                        </ul>

                        <div class="tab-content pt-2">
                            {{!-- Add Classification Tab --}}
                            <div class="tab-pane fade {{#if (eq activeTab 'add')}}show active{{/if}} add-classification pt-3"
                                id="add-classification">
                                <div class="card">
                                    <div class="card-body pt-3">
                                        <form method="POST" action="/admin/addClassification">

                                            {{!-- classification first name --}}
                                            <div class="row mb-3">
                                                <label for="firstName" class="col-md-3 col-lg-3 col-form-label">First
                                                    Name</label>
                                                <div class="col-md-8 col-lg-8">
                                                    <input required name="firstName" type="text"
                                                        class="form-control text-capitalize" id="firstName">
                                                </div>
                                            </div>
                                            {{!-- classification last name--}}
                                            <div class="row mb-3">
                                                <label for="lastName" class="col-md-3 col-lg-3 col-form-label">Last
                                                    Name</label>
                                                <div class="col-md-8 col-lg-8">
                                                    <input required name="lastName" type="text"
                                                        class="form-control text-capitalize" id="lastName">
                                                </div>
                                            </div>

                                            {{!-- classification facility--}}
                                            <div class="row mb-3">
                                                <label for="facility"
                                                    class="col-md-3 col-lg-3 col-form-label">Facility</label>
                                                <div class="col-md-8 col-lg-8">
                                                    <select required name="facility" id="facility" class="form-select"
                                                        aria-label="Facility Options">
                                                        <option selected value="">Select Facility:
                                                        </option>
                                                        <option value="El Dorado">El Dorado</option>
                                                        <option value="Ellsworth">Ellsworth</option>
                                                        <option value="Hutchinson">Hutchinson</option>
                                                        <option value="Lansing">Lansing</option>
                                                        <option value="Larned">Larned</option>
                                                        <option value="Norton">Norton</option>
                                                        <option value="Topeka">Topeka</option>
                                                        <option value="Winfield">Winfield</option>
                                                        <option value="Wichita">Wichita</option>
                                                    </select>
                                                </div>
                                            </div>

                                            {{!-- classification email --}}
                                            <div class="row mb-3">
                                                <label for="email"
                                                    class="col-md-3 col-lg-3 col-form-label">Email</label>
                                                <div class="col-md-8 col-lg-8">
                                                    <input required name="email" type="email" class="form-control"
                                                        id="email">
                                                </div>
                                            </div>

                                            {{!-- classification Password --}}
                                            <div class="row mb-3">
                                                <label for="password"
                                                    class="col-md-3 col-lg-3 col-form-label">Password</label>
                                                <div class="col-md-8 col-lg-8">
                                                    <input required name="password" type="password" class="form-control"
                                                        id="password">
                                                </div>
                                            </div>
                                            <hr>
                                            <div class="text-center">
                                                <button type="submit" class="btn btn-primary mx-2">Add
                                                    Member</button>
                                            </div>
                                        </form>
                                        {{#if addMsg}}
                                            <hr>
                                            <p class="text-success text-center fst-italic mt-3">New classification
                                                member added
                                                successfully.</p>
                                        {{/if}}
                                        {{#if addErr}}
                                            <hr>
                                            <p class="text-danger text-center fst-italic mt-3">This classification
                                                member
                                                already
                                                exists.</p>
                                        {{/if}}
                                    </div>
                                </div>
                            </div>

                            {{!-- Edit Existing Classification Tab --}}
                            <div class="tab-pane fade {{#if (eq activeTab 'edit')}}show active{{/if}} edit-classification pt-3"
                                id="edit-classification">
                                <div class="card">
                                    <div class="card-body pt-3">

                                        {{!-- Classification Search Bar --}}
                                        <div class="row mb-3">
                                            <label for="classificationList"
                                                class="col-md-4 col-lg-4 col-form-label">Search
                                                Classification:</label>
                                            <div class="col-md-8 col-lg-8">
                                                <div class="search-bar">
                                                    <form class="search-form d-flex align-items-center" method="POST"
                                                        action="/admin/searchClassificationName">

                                                        <div class="input-group">
                                                            <select required name="classificationID"
                                                                id="classificationList"
                                                                class="form-select text-capitalize"
                                                                aria-label="Select Classification">
                                                                <option selected value="">Select Member:
                                                                </option>
                                                                {{#each classification}}
                                                                    <option class="text-capitalize"
                                                                        value="{{this._id}}">
                                                                        {{this.firstName}} {{this.lastName}}
                                                                    </option>
                                                                {{/each}}
                                                            </select>
                                                            <button class="btn btn-primary" type="submit"
                                                                id="searchButton" title="Search">
                                                                <i class="bi bi-search"></i>
                                                            </button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>


                                        {{#if classificationFound}}
                                            {{!-- Edit Classification Form --}}
                                            <hr>
                                            <form method="POST" action="/admin/saveClassificationEdit">
                                                <input type="hidden" name="id" value="{{classificationFound._id}}">
                                                {{!-- classification firstName --}}
                                                <div class="row mb-3">
                                                    <label for="firstName"
                                                        class="col-md-4 col-lg-4 col-form-label">First
                                                        Name</label>
                                                    <div class="col-md-8 col-lg-8">
                                                        <input name="firstName" type="text"
                                                            class="form-control text-capitalize" id="editfirstName"
                                                            value="{{classificationFound.firstName}}">
                                                    </div>
                                                </div>
                                                {{!-- classification lastName --}}
                                                <div class="row mb-3">
                                                    <label for="editLastName"
                                                        class="col-md-4 col-lg-4 col-form-label">Last
                                                        Name</label>
                                                    <div class="col-md-8 col-lg-8">
                                                        <input name="lastName" type="text"
                                                            class="form-control text-capitalize" id="editLastName"
                                                            value="{{classificationFound.lastName}}">
                                                    </div>
                                                </div>
                                                {{!-- classification facility--}}
                                                <div class="row mb-3">
                                                    <label for="facility"
                                                        class="col-md-4 col-lg-4 col-form-label">Facility</label>
                                                    <div class="col-md-8 col-lg-8">

                                                        <select required name="facility" id="facilityEdit"
                                                            class="form-select" aria-label="Facility Options">
                                                            <option {{#if (eq classificationFound.facility "El Dorado" )
                                                                }}selected{{/if}} value="El Dorado">El Dorado
                                                            </option>
                                                            <option {{#if (eq classificationFound.facility "Ellsworth" )
                                                                }}selected{{/if}} value="Ellsworth">Ellsworth
                                                            </option>
                                                            <option {{#if (eq classificationFound.facility "Hutchinson"
                                                                ) }}selected{{/if}} value="Hutchinson">Hutchinson
                                                            </option>
                                                            <option {{#if (eq classificationFound.facility "Lansing" )
                                                                }}selected{{/if}} value="Lansing">Lansing</option>
                                                            <option {{#if (eq classificationFound.facility "Larned" )
                                                                }}selected{{/if}} value="Larned">Larned</option>
                                                            <option {{#if (eq classificationFound.facility "Norton" )
                                                                }}selected{{/if}} value="Norton">Norton</option>
                                                            <option {{#if (eq classificationFound.facility "Topeka" )
                                                                }}selected{{/if}} value="Topeka">Topeka</option>
                                                            <option {{#if (eq classificationFound.facility "Winfield" )
                                                                }}selected{{/if}} value="Winfield">Winfield</option>
                                                            <option {{#if (eq classificationFound.facility "Wichita" )
                                                                }}selected{{/if}} value="Wichita">Wichita</option>
                                                        </select>
                                                    </div>
                                                </div>

                                                {{!-- classification email --}}
                                                <div class="row mb-3">
                                                    <label for="email" class="col-md-4 col-lg-4 col-form-label">
                                                        Email</label>
                                                    <div class="col-md-8 col-lg-8">
                                                        <input name="email" type="text" class="form-control" id="email"
                                                            value="{{classificationFound.email}}" readonly>
                                                    </div>
                                                </div>
                                                <hr>
                                                <div class="d-flex justify-content-between mt-3">
                                                    <button data-bs-toggle="modal"
                                                        data-bs-target="#deleteClassification" type="button"
                                                        class="btn btn-danger mx-2">Delete
                                                        Member</button>

                                                    <button data-bs-toggle="modal" data-bs-target="#resetPassword"
                                                        type="button" class="btn btn-warning mx-2">Reset
                                                        Password</button>

                                                    <button type="submit" class="btn btn-primary mx-2">Save
                                                        Edit</button>
                                                </div>
                                            </form>

                                        {{/if}}
                                        {{#if saveMsg}}
                                            <hr>
                                            <p class="text-success text-center fst-italic mt-3">Your edits have been
                                                saved
                                                successfully.
                                            </p>
                                        {{/if}}
                                        {{#if deleteMsg}}
                                            <hr>
                                            <p class="text-danger text-center fst-italic mt-3">Classification memeber
                                                successfully deleted.
                                            </p>
                                        {{/if}}
                                        {{#if saved}}
                                            <hr>
                                            <p class="text-success text-center fst-italic mt-3">Password successfully
                                                reset.
                                            </p>
                                        {{/if}}
                                        {{#if savingError}}
                                            <hr>
                                            <p class="text-warning text-center fst-italic mt-3">There was an error in
                                                trying to reset this password. Please try again.
                                            </p>
                                        {{/if}}
                                    </div>
                                </div>
                            </div>

                            {{!-- All Classification tab --}}
                            <div class="tab-pane fade {{#if (eq activeTab 'all')}}show active{{/if}} all-classification pt-3"
                                id="all-classification">
                                <div class="col-12">
                                    <div class="card recent-sales overflow-auto">
                                        <div class="card-body">
                                            <h5 class="card-title">Classification <span>| All KDOC</span></h5>
                                            <table class="table table-borderless table-striped datatable">
                                                <thead>
                                                    <tr>
                                                        <th scope="col">#</th>
                                                        <th scope="col">First Name</th>
                                                        <th scope="col">Last Name</th>
                                                        <th scope="col">Email</th>
                                                        <th scope="col">Facility</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {{#each classification}}
                                                        <tr>
                                                            <th scope="row"><a
                                                                    href="/admin/classificationProfile/{{this._id}}">{{add
                                                                @index 1}}</a>
                                                            </th>
                                                            <td class="text-capitalize"><a
                                                                    href="/admin/classificationProfile/{{this._id}}">{{this.firstName}}</a>
                                                            </td>
                                                            <td class="text-capitalize"><a
                                                                    href="/admin/classificationProfile/{{this._id}}">{{this.lastName}}</a>
                                                            </td>
                                                            <td><a
                                                                    href="/admin/classificationProfile/{{this._id}}">{{this.email}}</a>
                                                            </td>
                                                            <td class="text-capitalize"><a
                                                                    href="/admin/classificationProfile/{{this._id}}">{{this.facility}}</a>
                                                            </td>
                                                        </tr>
                                                    {{/each}}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

{{> footer}}
{{> arrowUp}}


{{!-- Delete Classification Modal --}}
<div class="modal fade" id="deleteClassification" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" action="/admin/deleteClassification/{{classificationFound._id}}">
                <div class="modal-header">
                    <h5 class="modal-title text-capitalize">Delete Classification Member:
                        {{classificationFound.firstName}}
                        {{classificationFound.lastName}}
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row mb-3 mt-3">
                        <p>Are you sure you want to delete this member?</p>
                        <p class="text-danger">This action is permanent and will delete all information connected to
                            this account.</p>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="col-12 d-flex justify-content-between">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Delete Member</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


{{!-- Reset Password Modal --}}
<div class="modal fade" id="resetPassword" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" action="/admin/resetClassificationPassword/{{classificationFound._id}}">
                <div class="modal-header">
                    <h5 class="modal-title text-capitalize">Classification: {{classificationFound.firstName}}
                        {{classificationFound.lastName}}
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row mb-3 mt-3">
                        <label for="password" class="col-md-5 col-lg-5 col-form-label">New Password:</label>
                        <div class="col-md-7 col-lg-7">
                            <input required name="password" type="password" class="form-control" id="password">
                        </div>
                    </div>
                    <div class="row mb-3 mt-3">
                        <label for="confirmPassword" class="col-md-5 col-lg-5 col-form-label">Confirm
                            Password:</label>
                        <div class="col-md-7 col-lg-7">
                            <input required name="confirmPassword" type="password" class="form-control"
                                id="confirmPassword">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="col-12 d-flex justify-content-between">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-warning">Reset Password</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>