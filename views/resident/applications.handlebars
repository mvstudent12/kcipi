{{> residentTemplate}}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>My Applications</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/resident/dashboard">Dashboard</a></li>
                <li class="breadcrumb-item active" aria-current="page">My Applications</li>
            </ol>
        </nav>
    </div>

    <section class="section profile">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">
                        <img src="/assets/img/avatar.png" alt="Profile Avatar" class="rounded-circle">
                        <h2 class="text-capitalize">{{user.firstName}} {{user.lastName}}</h2>
                        <h2 class="text-capitalize mb-3" aria-label="Resident ID #{{user.residentID}}">
                            #{{user.residentID}}</h2>
                        <h3>KDOC Resident</h3>
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="card">
                    <div class="card-body pt-3">
                        {{!-- Applications Table --}}
                        <h5 class="card-title">Current Applications</h5>
                        {{#if user.isHired}}
                            <p class="text-success mt-3">
                                You are currently working as of {{formatDate user.dateHired}}.</p>
                            <p>You are not eligible to complete any applications while you are employed.</p>
                        {{else}}
                            {{#if appliedJobs}}
                                <div class="card">
                                    <div class="card-body pt-3">
                                        <table class="table table-borderless table-striped">
                                            <thead>
                                                <tr>
                                                    <th scope="col">Company</th>
                                                    <th scope="col">Position</th>
                                                    <th scope="col">Applied</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {{#each appliedJobs}}
                                                    <tr>
                                                        <th class="text-capitalize" scope="row"><a
                                                                href="/resident/jobInfo/{{this._id}}">{{this.companyName}}</a>
                                                        </th>
                                                        <td class="text-capitalize">
                                                            <a href="/resident/jobInfo/{{this._id}}"
                                                                class="text-primary">{{this.position}}</a>
                                                        </td>
                                                        <td class="text-capitalize">{{formatDate this.dateCreated}}</td>
                                                    </tr>
                                                {{/each}}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            {{else}}
                                <p class="text-primary mt-3">You have not submitted any applications yet.
                                </p>
                            {{/if}}
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

{{> footer}}
{{> arrowUp}}