                        <div class="col-lg-4 col-md-4 label text-info">Position:</div>
                        <div class="col-lg-8 col-md-8 text-capitalize">{{this.position}}</div>
                    </div>

                    <hr>
                    <div class="row mb-2">
                        <div class="col-lg-6 col-md-6 label text-info">Interview Requested On:</div>
                        {{#if this.interview.dateRequested}}
                            <div class="col-lg-6 col-md-6">{{formatDate this.interview.dateRequested}}</div>
                        {{else}}
                            <div class="col-lg-6 col-md-6">No Request</div>
                        {{/if}}
                    </div>

                    <div class="row mb-2">
                        <div class="col-lg-6 col-md-6 label text-info">Interview Scheduled For:</div>
                        {{#if this.interview.dateScheduled}}

                            <div class="col-lg-6 col-md-6">{{formatDate this.interview.dateScheduled}} &nbsp; @ &nbsp;
                                {{this.interview.time}}
                            </div>
                        {{else}}
                            <div class="col-lg-6 col-md-6">None Scheduled</div>
                        {{/if}}

                    </div>
                    <hr>
                    <div class="row mb-2">
                        <div class="col-lg-6 col-md-6 label text-info">Employment Requested:</div>

                        {{#if this.hireRequest}}
                            <div class="col-lg-6 col-md-6 text-success">Requested</div>
                        {{else}}
                            <div class="col-lg-6 col-md-6">No Request</div>
                        {{/if}}

                    </div>
                </div>
                <div class="modal-footer">
                    <div class="col-12 d-flex justify-content-between">
                        <a href="/clearance/rejectHire/{{../resident._id}}/{{this._id}}" class="btn btn-danger mx-2"
                            aria-label="reject hire">Reject Hire</a>

                        <button type="button" data-bs-toggle="modal" data-bs-target="#{{this._id}}3"
                            class="btn btn-success mx-2" aria-label="hire resident">Hire
                            Resident</button>
                    </div>
                </div>

            </div>
        </div>
    </div>

    {{!-- Schedule Interview Modal --}}
    <div class="modal fade" id="{{this._id}}2" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content p-2">

                <div class="modal-header">

                    <h3 class="modal-title">
                        Schedule Interview
                    </h3>

                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form method="POST" action="/clearance/scheduleInterview/{{this._id}}">
                    <div class="modal-body">
                        {{#if this.interview.dateRequested}}

                            <p>Employer Preferences - Requested on {{formatDate this.interview.dateRequested}}</p>
                            <hr>
                            <div class="row mb-3">
                                <label for="instructions" class="col-12 col-form-label">Scheduling Preferences:</label>
                                <div class="col-12">
                                    <textarea disabled class="form-control" style="height: 100px" name="instructions"
                                        placeholder="none">{{this.interview.preferredDate}}</textarea>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="instructions" class="col-12 col-form-label">Instructions:</label>
                                <div class="col-12">
                                    <textarea disabled class="form-control" style="height: 100px" name="instructions"
                                        placeholder="none">{{this.interview.employerInstructions}}</textarea>
                                </div>
                            </div>
                            <hr>
                        {{/if}}


                        <div class="row mb-3">
                            <label for="name" class="col-sm-2 col-form-label">Resident</label>
                            <div class="col-sm-10">
                                <input required type="text" class="form-control text-capitalize" disabled
                                    value="{{../resident.firstName}} {{../resident.lastName}}">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="name" class="col-sm-2 col-form-label">ID #</label>
                            <div class="col-sm-10">
                                <input required type="text" class="form-control" name="residentID" disabled
                                    value="{{../resident.residentID}}">
                            </div>
                        </div>


                        <hr>

                        <div class="row mb-3">
                            <label for="date" class="col-sm-2 col-form-label">Date</label>
                            <div class="col-sm-10">
                                <input required type="date" class="form-control" name="date">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="time" class="col-sm-2 col-form-label">Time</label>
                            <div class="col-sm-10">
                                <input required type="time" class="form-control" name="time">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="instructions" class="col-12 col-form-label">Additional Instructions for
                                Resident:</label>
                            <div class="col-12">
                                <textarea class="form-control" style="height: 100px" name="instructions"
                                    placeholder="optional"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="col-12 d-flex justify-content-between">
                            <button type="button" class="btn btn-secondary mx-2" data-bs-dismiss="modal"
                                aria-label="Close">Cancel</button>
                            <button type="submit" class="btn btn-info mx-2"
                                aria-label="schedule interview">Schedule</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    {{!-- Hire Resident Modal --}}
    <div class="modal fade" id="{{this._id}}3" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <form method="post" action="/clearance/hireResident/{{../resident._id}}/{{this._id}}">
                    <div class="modal-header">
                        <h5 class="modal-title">Employ Resident</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row mb-3">
                            <label for="startDate" class="col-form-label">Select Start Date:</label>
                            <div class="col-sm-10">
                                <input required type="date" class="form-control" name="startDate">
                            </div>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <div class="col-12 d-flex justify-content-between">
                            <button type="button" class="btn btn-secondary mx-2" data-bs-dismiss="modal"
                                aria-label="Close">Cancel</button>
                            <button type="submit" class="btn btn-success mx-2" aria-label="employ resident">Employ
                                Resident</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{{/each}}




