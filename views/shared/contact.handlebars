{{#if (eq user.role "unitTeam")}}{{> unitTeamTemplate}}{{/if}}
{{#if (eq user.role "classification")}}{{> classificationTemplate}}{{/if}}
{{#if (eq user.role "facility_management")}}{{> facility_managementTemplate}}{{/if}}
{{#if (eq user.role "employer")}}{{> employerTemplate}}{{/if}}
{{#if (eq user.role "admin")}}{{> adminTemplate}}{{/if}}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Contact</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/{{user.role}}/dashboard">Dashboard</a></li>
                <li class="breadcrumb-item active">Contact</li>
            </ol>
        </nav>
    </div>

    <section class="section contact">
        <div class="row gy-4">
            <div class="col-12">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="info-box card">
                            <i class="bi bi-geo-alt"></i>
                            <h3>Address</h3>
                            <p>P.O. Box 2,<br>Lansing, KS 66043</p>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="info-box card">
                            <i class="bi bi-telephone"></i>
                            <h3>Call Us</h3>
                            <p>+1 913 727-3249<br>+1 913 727-2331</p>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="info-box card">
                            <i class="bi bi-envelope"></i>
                            <h3>Email Us</h3>
                            <p>carrie.branson@ks.gov<br>mark.daugherty@ks.gov</p>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="info-box card">
                            <i class="bi bi-clock"></i>
                            <h3>Open Hours</h3>
                            <p>Monday - Friday<br>8:00AM - 3:00PM</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="card p-4">
                    {{#if sentMsg}}
                        <div class="row gy-4">
                            <div class="col-md-12 p-4">
                                <p>Thank you for contacting Kansas Correctional Industries. We have successfully
                                    received your message and will respond to
                                    your inquiry as soon as possible.</p>
                                <p>Our team is committed to providing excellent support and typically responds
                                    within 48
                                    hours.</p>
                                <p>If your message requires immediate attention, please feel free to contact us
                                    directly
                                    at &lpar;913&rpar; 727-2331.</p>
                                <p>We appreciate your interest in Kansas Correctional Industries and look forward to
                                    assisting you.</p>
                            </div>
                        </div>
                    {{else}}
                        <h3 class="text-center text-info">Contact Kansas Correctional Industries:</h3>
                        <p class="text-center mt-3 mb-3">Fill out the form below with detailed information about your
                            inquiry.
                        </p>
                        <form action="/request/contact" method="post" class="mt-3">
                            <div class="row gy-4">
                                <div class="col-md-6">
                                    <input type="text" name="name" value="{{user.firstName}} {{user.lastName}}"
                                        class="form-control text-capitalize"
                                        placeholder="{{user.firstName}} {{user.lastName}}" readonly>
                                </div>
                                <div class="col-md-6 ">
                                    <input type="email" class="form-control" name="email" placeholder="{{user.email}}"
                                        value="{{user.email}}" readonly>
                                </div>
                                <div class="col-md-12">
                                    <input type="text" class="form-control" name="subject" placeholder="Subject"
                                        required>
                                </div>
                                <div class="col-md-12">
                                    <textarea class="form-control" name="message" rows="6" placeholder="Message"
                                        required></textarea>
                                </div>
                                <div class="col-md-12 text-center">
                                    <button class="btn btn-primary" type="submit">Send</button>
                                </div>
                            </div>
                        </form>
                    {{/if}}
                </div>
            </div>
        </div>
    </section>
</main>


{{> footer}}
{{> arrowUp}}