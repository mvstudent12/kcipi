{{> unitTeamTemplate}}

<main id="main" class="main">
    <div class="pagetitle">
        <h1 class="text-capitalize">Workforce Hiring Request - {{job.companyName}}</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item active">PI Hiring</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section profile">

        {{!-- Resident info card --}}
        <div class="row">

            <div class="col-12">
                <div class="card">
                    <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">
                        <img src="/assets/img/avatar.png" alt="Profile" class="rounded-circle">
                        <h2 class="text-capitalize">{{resident.firstName}} {{resident.lastName}}
                        </h2>
                        <h2 class="text-capitalize mb-3">#{{resident.residentID}}</h2>
                        <h3>KDOC Resident</h3>
                    </div>
                </div>
            </div>

            {{!-- Schedule Section --}}


            <div class="col-12">
                <div class="card">
                    <div class="card-body pt-3">
                        {{!-- is interview already scheduled? --}}
                        {{#if resident.isHired}}
                            <h5 class="text-success mt-3">This resident has been successfully hired.</h5>
                            <p class="mt-3">Thank you for your time.</p>
                            <a href="/" class="mt-3">
                                <button class="btn btn-info">Login to Portal</button>
                            </a>
                        {{else}}
                            <div class="card">
                                <div class="card-body">
                                    {{!-- Schedule Form --}}
                                    <form method="POST"
                                        action="/clearance/hireResident/{{resident._id}}/{{application._id}}">
                                        <div class="card-body">
                                            <h5 class="card-title mt-3">Review hiring eligibility for resident.</h5>

                                            <hr>

                                            <p><span class="text-capitalize">{{job.companyName}}</span> hiring request
                                                made
                                                on
                                                {{formatDate application.hireRequestDate}}.
                                            </p>
                                            <hr>
                                            {{!-- Position Name --}}
                                            <div class="row mb-3">
                                                <label for="position" class="col-sm-2 col-form-label">Position</label>
                                                <div class="col-sm-10">
                                                    <input required type="text" class="form-control text-capitalize"
                                                        readonly value="{{job.position}}">
                                                </div>
                                            </div>
                                            {{!-- Pay --}}
                                            <div class="row mb-3">
                                                <label for="pay" class="col-sm-2 col-form-label">Hourly Pay</label>
                                                <div class="col-sm-10">
                                                    <input required type="text" class="form-control text-capitalize"
                                                        readonly value="{{job.pay}}">
                                                </div>
                                            </div>
                                            {{!-- jobPool --}}
                                            <div class="row mb-3">
                                                <label for="jobPool" class="col-sm-2 col-form-label">Job pool</label>
                                                <div class="col-sm-10">
                                                    <input required type="text" class="form-control text-capitalize"
                                                        readonly value="{{job.jobPool}}">
                                                </div>
                                            </div>
                                            {{!-- facility --}}
                                            <div class="row mb-3">
                                                <label for="facility" class="col-sm-2 col-form-label">Facility</label>
                                                <div class="col-sm-10">
                                                    <input required type="text" class="form-control text-capitalize"
                                                        readonly value="{{job.facility}}">
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <label for="instructions" class="col-12 col-form-label">Start Date
                                                    Preferences from Employer:</label>
                                                <div class="col-12">
                                                    <textarea disabled class="form-control" style="height: 100px"
                                                        name="instructions"
                                                        placeholder="No Preferences">{{formatDate application.hireRequestStartDate}}</textarea>
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <label for="instructions" class="col-12 col-form-label">Instructions
                                                    from
                                                    Employer:</label>
                                                <div class="col-12">
                                                    <textarea disabled class="form-control" style="height: 100px"
                                                        name="instructions"
                                                        placeholder="No Preferences">{{application.hireRequestInfo}}</textarea>
                                                </div>
                                            </div>

                                            <hr>

                                            {{!-- Name --}}
                                            <div class="row mb-3">
                                                <label for="name" class="col-sm-2 col-form-label">Resident</label>
                                                <div class="col-sm-10">
                                                    <input required type="text" class="form-control text-capitalize"
                                                        readonly value="{{resident.firstName}} {{resident.lastName}}">
                                                </div>
                                            </div>
                                            {{!-- ID --}}
                                            <div class="row mb-3">
                                                <label for="residentID" class="col-sm-2 col-form-label">ID #</label>
                                                <div class="col-sm-10">
                                                    <input required type="text" class="form-control" name="residentID"
                                                        readonly value="{{resident.residentID}}">
                                                </div>
                                            </div>
                                            {{!-- Facility --}}
                                            <div class="row mb-3">
                                                <label for="facility" class="col-sm-2 col-form-label">Facility</label>
                                                <div class="col-sm-10">
                                                    <input required type="text" class="form-control text-capitalize"
                                                        name="facility" readonly value="{{resident.facility}}">
                                                </div>
                                            </div>
                                            {{!-- Job Pool --}}
                                            <div class="row mb-3">
                                                <label for="jobPool" class="col-sm-2 col-form-label">Job Pool</label>
                                                <div class="col-sm-10">
                                                    <input required type="text" class="form-control text-capitalize"
                                                        name="jobPool" readonly value="{{resident.jobPool}}">
                                                </div>
                                            </div>

                                            <hr>
                                            {{!-- Start Date --}}
                                            <div class="row mb-3">
                                                <label for="date" class="col-sm-2 col-form-label">Start Date</label>
                                                <div class="col-sm-10">
                                                    <input required type="date" class="form-control" name="startDate">
                                                </div>
                                            </div>

                                        </div>
                                        <hr>
                                        <div class="d-flex justify-content-between mt-3">
                                            <a href="/clearance/rejectHire/{{resident._id}}/{{job._id}}">
                                                <button type="button" class="btn btn-danger btn-block mb-2">Reject
                                                    Hire</button></a>
                                            <button type="submit" class="btn btn-info btn-block mb-2">Hire
                                                Resident</button>
                                        </div>
                                    </form>
                                </div>
                            </div>




                        {{/if}}

                    </div>
                </div>
            </div>
        </div>
        </div>
    </section>
</main><!-- End #main -->

<!-- ======= Footer ======= -->
{{> footer}}

{{> arrowUp}}