{{> employerTemplate}}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Eligible Applicants</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item active"><a href="/employer/dashboard">Dashboard</a></li>
                <li class="breadcrumb-item active">Eligible Applicants</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section dashboard">
        <div class="row">

            <!-- Dashboard Cone -->
            <div class="col-lg-12">
                <div class="row">

                    {{!-- Data Tables Section --}}
                    <!-- Applicants Table -->
                    <div class="col-12">
                        <div class="card recent-sales overflow-auto">
                            <div class="card-body">
                                <h5 class="card-title">Applicants <span>| Eligible Hires</span></h5>
                                <table class="table table-borderless datatable">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Out Date</th>
                                            <th scope="col">Custody</th>
                                            <th scope="col">Facility</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each applicants}}
                                        <tr>
                                            <th scope="row"><a
                                                    href="/employer/residentProfile/{{this.residentID}}">{{this.residentID}}</a>
                                            </th>
                                            <td class="text-capitalize"><a
                                                    href="/employer/residentProfile/{{this.residentID}}">
                                                    {{this.firstName}} {{this.lastName}}</a></td>
                                            <td class="text-capitalize">01/13/26</td>

                                            <td class="text-capitalize">{{this.custodyLevel}}</td>
                                            <td class="text-capitalize">{{this.facility}}</td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- End Applicants Table -->
                    {{!-- End of Data Tables Section --}}
                </div>
            </div><!-- End Dashboard Cone -->
        </div>
    </section>
</main><!-- End #main -->
<!-- ======= Footer ======= -->
{{> footer}}
{{> arrowUp}}