{{> employerTemplate}}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Manage Workforce</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item active"><a href="/employer/dashboard">Dashboard</a></li>
                <li class="breadcrumb-item active">Manage Workforce</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section dashboard">
        <div class="row">

            <!-- Dashboard Cone -->
            <div class="col-lg-12">
                <div class="row">

                    {{!-- Data Tables Section --}}
                    <!-- Applicants Table -->
                    <div class="col-12">
                        <div class="card recent-sales overflow-auto">
                            <div class="card-body">
                                <h5 class="card-title">Applicants <span>| Eligible Hires</span></h5>
                                <table class="table table-borderless table-striped datatable">
                                    <thead>
                                        <tr>
                                            <th scope="col">ID #</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Out Date</th>
                                            <th scope="col">Custody</th>
                                            <th scope="col">Facility</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each applicants}}
                                        <tr>
                                            <th scope="row"><a
                                                    href="/clearance/residentProfile/{{this.residentID}}">{{this.residentID}}</a>
                                            </th>
                                            <td class="text-capitalize"><a
                                                    href="/clearance/residentProfile/{{this.residentID}}">
                                                    {{this.firstName}} {{this.lastName}}</a></td>
                                            <td class="text-capitalize">{{formatDate this.outDate}}</td>

                                            <td class="text-capitalize">{{this.custodyLevel}}</td>
                                            <td class="text-capitalize">{{this.facility}}</td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        {{#if applicants}}
                        <div class="text-center mb-3">
                            <button onclick="exportToCSV({{json applicants}})" class="btn btn-info">Export
                                Applicants</button>
                        </div>
                        {{/if}}
                    </div>


                    <!-- Interviews Table -->
                    <div class="col-12">
                        <div class="card recent-sales overflow-auto">
                            <div class="card-body">
                                <h5 class="card-title">Interviews <span>| Requested</span></h5>
                                <table class="table table-borderless table-striped datatable">
                                    <thead>
                                        <tr>
                                            <th scope="col">ID #</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Position</th>
                                            <th scope="col">Requested</th>
                                            <th scope="col">Scheduled</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each interviews}}
                                        <tr>
                                            <th scope="row"><a
                                                    href="/clearance/residentProfile/{{this.interview.residentID}}">{{this.interview.residentID}}</a>
                                            </th>
                                            <td class="text-capitalize"><a
                                                    href="/clearance/residentProfile/{{this.interview.residentID}}">
                                                    {{this.interview.name}}</a></td>

                                            <td class="text-capitalize"><a
                                                    href="/clearance/residentProfile/{{this.interview.residentID}}">{{this.position}}</a>
                                            </td>
                                            {{#if this.interview.isRequested}}
                                            <td>{{formatDate this.interview.dateRequested}}</td>
                                            {{else}}
                                            <td>No</td>
                                            {{/if}}

                                            {{#if this.interview.dateScheduled}}
                                            <td>{{formatDate this.interview.dateScheduled}}</td>
                                            {{else}}
                                            <td>No</td>
                                            {{/if}}

                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        {{#if interviews}}
                        <div class="text-center mb-3">
                            <button onclick="exportToCSV({{json interviews}})" class="btn btn-info">Export
                                Interviews</button>
                        </div>
                        {{/if}}
                    </div>

                    <!-- Employees Table -->
                    <div class="col-12">
                        <div class="card recent-sales overflow-auto">
                            <div class="card-body">
                                <h5 class="card-title">Employees <span>| Workforce</span></h5>
                                <table class="table table-borderless table-striped datatable">
                                    <thead>
                                        <tr>
                                            <th scope="col">ID #</th>
                                            <th scope="col">Facility</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Out Date</th>
                                            <th scope="col">Unit Team</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each employees}}
                                        <tr>
                                            <th scope="row">
                                                <a
                                                    href="/clearance/residentProfile/{{this.residentID}}">{{this.residentID}}</a>
                                            </th>
                                            <td class="text-capitalize">
                                                <a
                                                    href="/clearance/residentProfile/{{this.residentID}}">{{this.facility}}</a>
                                            </td>
                                            <td class="text-capitalize">
                                                <a href="/clearance/residentProfile/{{this.residentID}}">{{this.firstName}}
                                                    {{this.lastName}}</a>
                                            </td>
                                            <td class="text-capitalize">
                                                <a href="/clearance/residentProfile/{{this.residentID}}">{{formatDate
                                                    this.outDate}}</a>
                                            </td>
                                            <td class="text-capitalize">
                                                <a
                                                    href="/clearance/residentProfile/{{this.residentID}}">{{this.unitTeam}}</a>
                                            </td>
                                        </tr>

                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        {{#if employees}}
                        <div class="text-center mb-3">
                            <button onclick="exportToCSV({{json employees}})" class="btn btn-info">Export
                                Employees</button>
                        </div>
                    </div>
                    {{/if}}

                    {{!-- End of Data Tables Section --}}
                </div>
            </div>
        </div>
    </section>
</main>
<!-- ======= Footer ======= -->
{{> footer}}
{{> arrowUp}}

<script type="text/javascript" src="/../assets/js/exportToCSV.js"></script>