{{> employerTemplate}}

<main id="main" class="main">

    <div class="pagetitle">
        <h1 class="text-capitalize">Recent Activities <span class="text-capitalize text-muted small">|
                {{user.companyName}}</span></h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/employer/dashboard">Dashboard</a></li>
                <li class="breadcrumb-item active text-capitalize">Recent Activities</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section profile">
        <div class="row">


            <div class="col-12">

                <!-- Recent Activity -->
                <div class="card">

                    <div class="card-body">
                        <h5 class="card-title text-capitalize">{{user.firstName}}
                            {{user.lastName}} <span class="text-capitalize">| PI Contact</span>
                        </h5>

                        <div class="activity">
                            <div class="card">
                                <div class="card-body mt-3">
                                    {{#if activities}}
                                        {{#each activities}}
                                            <div class="activity-item d-flex">
                                                <div class="activite-label">{{formatDate this.timestamp}}</div>
                                                <i
                                                    class='bi bi-circle-fill activity-badge {{this.color}} align-self-start'></i>
                                                <div class="activity-content">
                                                    {{this.details}}
                                                </div>
                                            </div><!-- End activity item-->

                                        {{/each}}
                                    {{else}}
                                        <h5 class="text-center pt-3">You have not yet completed any activities.</h5>
                                    {{/if}}
                                </div>
                            </div>
                        </div>

                    </div>
                </div><!-- End Recent Activity -->
            </div>
        </div>
        </div>
        </div>
    </section>
</main><!-- End #main -->

<!-- ======= Footer ======= -->
