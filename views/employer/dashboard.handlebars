{{> employerTemplate}}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Employer Dashboard</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item active">Dashboard</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section dashboard">
        <div class="row">
            <!-- Left side columns -->
            <div class="col-lg-12">
                <div class="row">
                    <!-- Positions card -->
                    <div class="col-xxl-4 col-md-4">
                        <div class="card info-card sales-card">

                            <div class="card-body">
                                <a href="/employer/managePositions">
                                    <h5 class="card-title">Positions <span>| To Fill</span></h5>
                                    <div class="d-flex align-items-center">
                                        <div
                                            class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                            <i class="bi bi-clipboard-check"></i>
                                        </div>
                                        <div class="ps-3">
                                            <h6>{{positionsAvailable}}</h6>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div><!-- End Positions card -->

                    <!-- Applicants Card -->
                    <div class="col-xxl-4 col-md-4">
                        <div class="card info-card revenue-card">
                            <div class="card-body">
                                <a href="/employer/manageWorkForce">
                                    <h5 class="card-title">Applicants <span>| To Review</span></h5>
                                    <div class="d-flex align-items-center">
                                        <div
                                            class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                            <i class="bi bi-card-list"></i>
                                        </div>
                                        <div class="ps-3">
                                            <h6>{{countArrayItems applicants}}</h6>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div><!-- End Applicants Card -->

                    <!-- Employees Card -->
                    <div class="col-xxl-4 col-md-4">
                        <div class="card info-card customers-card">
                            <div class="card-body">
                                <a href="/employer/employees">
                                    <h5 class="card-title">Employees <span>| Workforce</span></h5>
                                    <div class="d-flex align-items-center">
                                        <div
                                            class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                            <i class="bi bi-people"></i>
                                        </div>
                                        <div class="ps-3">
                                            <h6>{{countItems employees}}</h6>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>

                    {{!-- Data Tables Section --}}

                    <!-- Job Positions Table -->
                    <div class="col-12">
                        <div class="card recent-sales overflow-auto">
                            <div class="card-body">
                                <h5 class="card-title">Job Positions <span>| Available</span></h5>
                                <table class="table table-borderless table-striped datatable">
                                    <thead>
                                        <tr>

                                            <th scope="col">Position</th>
                                            <th scope="col">Pay</th>
                                            <th scope="col">Job Pool</th>
                                            <th scope="col"># Available</th>
                                            <th scope="col">Applicants</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each availableJobs}}
                                            <tr>
                                                <th scope="row">
                                                    <a href="/employer/jobProfile/{{this._id}}"
                                                        class="text-primary text-capitalize">
                                                        {{this.position}}</a>
                                                </th>
                                                <td><a href="/employer/jobProfile/{{this._id}}"
                                                        class="text-primary text-capitalize">${{this.pay}}</a>
                                                </td>
                                                <td class="text-capitalize"><a href="/employer/jobProfile/{{this._id}}"
                                                        class="text-primary">{{this.jobPool}}</a>
                                                </td>
                                                <td><a href="/employer/jobProfile/{{this._id}}"
                                                        class="text-primary text-capitalize">{{this.availablePositions}}</a>
                                                </td>
                                                {{#if (eq this.applicants '')}}
                                                    <td><span class="badge bg-danger">None</span></td>
                                                {{else}}
                                                    <td><span class="badge bg-success">
                                                            &nbsp;&nbsp;{{countArrayItems this.applicants}}
                                                            &nbsp;&nbsp;</span>
                                                    </td>
                                                {{/if}}
                                            </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Applicants Table -->
                    <div class="col-12">
                        <div class="card recent-sales overflow-auto">
                            <div class="card-body">
                                <h5 class="card-title">Applicants <span>| To Review</span></h5>
                                <table class="table table-borderless table-striped datatable">
                                    <thead>
                                        <tr>
                                            <th scope="col">ID #</th>
                                            <th scope="col">Facility</th>
                                            <th scope="col">Resident</th>
                                            <th scope="col">Out Date</th>
                                            <th scope="col">Custody</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each applicants}}
                                            <tr>
                                                <th scope="row">
                                                    <a
                                                        href="/employer/residentProfile/{{this.residentID}}">{{this.residentID}}</a>
                                                </th>
                                                <td class="text-capitalize">
                                                    <a
                                                        href="/employer/residentProfile/{{this.residentID}}">{{this.facility}}</a>
                                                </td>
                                                <td>
                                                    <a href="/employer/residentProfile/{{this.residentID}}"
                                                        class="text-primary text-capitalize">{{this.firstName}}
                                                        {{this.lastName}}</a>
                                                </td>
                                                <td>
                                                    <a href="/employer/residentProfile/{{this.residentID}}"
                                                        class="text-primary text-capitalize">
                                                        {{formatDate this.outDate}}
                                                    </a>
                                                </td>
                                                <td class="text-capitalize">
                                                    <a
                                                        href="/employer/residentProfile/{{this.residentID}}">{{this.custodyLevel}}</a>
                                                </td>
                                            </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Employees Table -->
                    <div class="col-12">
                        <div class="card recent-sales overflow-auto">
                            <div class="card-body">
                                <h5 class="card-title">Employees <span>| Workforce</span></h5>
                                <table class="table table-borderless table-striped datatable">
                                    <thead>
                                        <tr>
                                            <th scope="col">ID #</th>
                                            <th scope="col">Facility</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Out Date</th>
                                            <th scope="col">Unit Team</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each employees}}
                                            <tr>
                                                <th scope="row">
                                                    <a
                                                        href="/employer/residentProfile/{{this.residentID}}">{{this.residentID}}</a>
                                                </th>
                                                <td class="text-capitalize">
                                                    <a
                                                        href="/employer/residentProfile/{{this.residentID}}">{{this.facility}}</a>
                                                </td>
                                                <td class="text-capitalize">
                                                    <a href="/employer/residentProfile/{{this.residentID}}">{{this.firstName}}
                                                        {{this.lastName}}</a>
                                                </td>
                                                <td class="text-capitalize">
                                                    <a href="/employer/residentProfile/{{this.residentID}}">{{formatDate
                                                    this.outDate}}</a>
                                                </td>
                                                <td class="text-capitalize">
                                                    <a
                                                        href="/employer/residentProfile/{{this.residentID}}">{{this.unitTeam}}</a>
                                                </td>


                                            </tr>

                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    {{!-- End of Data Tables Section --}}
                </div>
            </div><!-- End Dashboard Content -->
        </div>
    </section>
</main><!-- End #main -->

<!-- ======= Footer ======= -->
{{> footer}}

{{> arrowUp}}