{{> classificationTemplate}}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Manage Workforce</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item active"><a href="/classification/dashboard">Dashboard</a></li>
                <li class="breadcrumb-item active">Manage Workforce</li>
            </ol>
        </nav>
    </div>

    <section class="section dashboard">
        <div class="row">

            <div class="col-lg-12">
                <div class="row">

                    <!-- Applicants Table -->
                    <div class="col-12">
                        <div class="card recent-sales overflow-auto">
                            <div class="card-body">
                                <h5 class="card-title">Applicants <span>| Eligible Hires</span></h5>
                                <table class="table table-borderless table-striped datatable">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Out Date</th>
                                            <th scope="col">Custody</th>
                                            <th scope="col">Company</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each applicants}}
                                        <tr>
                                            <th scope="row"><a
                                                    href="/clearance/residentProfile/{{this.residentID}}">{{this.residentID}}</a>
                                            </th>
                                            <td class="text-capitalize"><a
                                                    href="/clearance/residentProfile/{{this.residentID}}">
                                                    {{this.firstName}} {{this.lastName}}</a></td>
                                            <td class="text-capitalize"><a
                                                    href="/clearance/residentProfile/{{this.residentID}}">
                                                    {{formatDate this.outDate}}</a></td>

                                            <td class="text-capitalize"><a
                                                    href="/clearance/residentProfile/{{this.residentID}}">{{this.custodyLevel}}</a>
                                            </td>
                                            <td class="text-capitalize"><a
                                                    href="/clearance/residentProfile/{{this.residentID}}">{{this.companyName}}</a>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Interviews Table -->
                    <div class="col-12">
                        <div class="card recent-sales overflow-auto">
                            <div class="card-body">
                                <h5 class="card-title">Interviews <span>| Requested</span></h5>
                                <table class="table table-borderless table-striped datatable">
                                    <thead>
                                        <tr>
                                            <th scope="col">ID #</th>
                                            <th scope="col">Name</th>

                                            <th scope="col">Requested</th>
                                            <th scope="col">Scheduled</th>
                                            <th scope="col">Company</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each interviews}}
                                        <tr>
                                            <th scope="row"><a
                                                    href="/clearance/residentProfile/{{this.interview.residentID}}">{{this.interview.residentID}}</a>
                                            </th>
                                            <td class="text-capitalize"><a
                                                    href="/clearance/residentProfile/{{this.interview.residentID}}">
                                                    {{this.interview.name}}</a></td>


                                            {{#if this.interview.isRequested}}
                                            <td><span class="badge bg-success">{{formatDate
                                                    this.interview.dateRequested}}</span></td>
                                            {{else}}
                                            <td>No</td>
                                            {{/if}}

                                            {{#if this.interview.dateScheduled}}
                                            <td>{{formatDate this.interview.dateScheduled}}</td>
                                            {{else}}
                                            <td>No</td>
                                            {{/if}}

                                            <td class="text-capitalize">
                                                <a href="/clearance/residentProfile/{{this.interview.residentID}}">
                                                    {{this.companyName}}</a>
                                            </td>

                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Employees Table -->
                    <div class="col-12">
                        <div class="card recent-sales overflow-auto">
                            <div class="card-body">
                                <h5 class="card-title">Employees <span>| Workforce</span></h5>
                                <table class="table table-borderless table-striped datatable">
                                    <thead>
                                        <tr>
                                            <th scope="col">ID #</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Out Date</th>
                                            <th scope="col">Date Hired</th>
                                            <th scope="col">Company</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each employees}}
                                        <tr>
                                            <th scope="row">
                                                <a
                                                    href="/clearance/residentProfile/{{this.residentID}}">{{this.residentID}}</a>
                                            </th>

                                            <td class="text-capitalize">
                                                <a href="/clearance/residentProfile/{{this.residentID}}">{{this.firstName}}
                                                    {{this.lastName}}</a>
                                            </td>
                                            <td class="text-capitalize">
                                                <a href="/clearance/residentProfile/{{this.residentID}}">{{formatDate
                                                    this.outDate}}</a>
                                            </td>
                                            <td class="text-capitalize">
                                                <a href="/clearance/residentProfile/{{this.residentID}}">{{formatDate
                                                    this.dateHired}}</a>
                                            </td>
                                            <td class="text-capitalize">
                                                <a
                                                    href="/clearance/residentProfile/{{this.residentID}}">{{this.companyName}}</a>
                                            </td>


                                        </tr>

                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
</main>
<!-- ======= Footer ======= -->
{{> footer}}
{{> arrowUp}}