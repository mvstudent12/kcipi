<section class="section profile">
    <div class="row">
        <div class="col-12">
            <div class="card" style="min-width: 720px;">
                <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">
                    <img src="/assets/img/avatar.png" alt="Profile" class="rounded-circle">
                    <h2 class="text-capitalize">{{resident.firstName}} {{resident.lastName}}</h2>
                    <h2 class="text-capitalize mb-3">#{{resident.residentID}}</h2>
                    <h3>KDOC Resident</h3>
                </div>
            </div>
        </div>

        <div class="col-12">
            <div class="card" style="min-width: 720px;">
                <div class="card-body pt-3">
                    <!--========= Tab Borders =======-->
                    <ul class="nav nav-tabs nav-tabs-bordered">
                        <li class="nav-item">
                            <button class="nav-link {{#if (eq activeTab 'overview')}}active{{/if}}" data-bs-toggle="tab"
                                data-bs-target="#profile-overview">Overview</button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link {{#if (eq activeTab 'resume')}}active{{/if}}" data-bs-toggle="tab"
                                data-bs-target="#profile-edit">Resume</button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link {{#if (eq activeTab 'clearance')}}active{{/if}}"
                                data-bs-toggle="tab" data-bs-target="#profile-clearance">Clearance</button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link {{#if (eq activeTab 'application')}}active{{/if}}"
                                data-bs-toggle="tab" data-bs-target="#profile-application">{{#if
                                resident.isHired}}Employment{{else}}Applications{{/if}}</button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link {{#if (eq activeTab 'work-history')}}active{{/if}}"
                                data-bs-toggle="tab" data-bs-target="#profile-work-history">Work History</button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link {{#if (eq activeTab 'activities')}}active{{/if}}"
                                data-bs-toggle="tab" data-bs-target="#profile-activities">Activity Log</button>
                        </li>
                    </ul>
                    {{!--===== TABS =====--}}
                    <div class="tab-content pt-2">
                        {{!--===== Resident Overview Tab =====--}}
                        <div class="tab-pane fade {{#if (eq activeTab 'overview')}}show active{{/if}} profile-overview pt-3"
                            id="profile-overview">
                            <div class="card">
                                <div class="card-body pt-3">
                                    {{#if resident.isHired}}
                                        <div class="text-center">
                                            <p class="text-success">This resident is working as of {{formatDate
                                            resident.dateHired}}</p>
                                        </div>
                                    {{else}}
                                        {{#if (eq resident.workEligibility.status "approved")}}
                                            <div class="text-center">
                                                <p class="text-success">This resident is approved and eligible for
                                                    work.</p>
                                            </div>
                                        {{/if}}
                                    {{/if}}

                                    {{#if (eq resident.workEligibility.status "none")}}

                                        <div class="text-center pt-3">
                                            <p class="text-primary">This resident needs reviewed for clearance.</p>
                                        </div>


                                    {{/if}}

                                    {{#if (eq resident.workEligibility.status "restricted")}}
                                        <div class="text-center">
                                            <p class="text-danger">This resident is not eligible
                                                to work due to restrictions.</p>
                                        </div>
                                    {{/if}}
                                    {{#if (eq resident.workEligibility.status "pending")}}
                                        <div class="text-center">
                                            <p class="text-primary">This resident is in the clearance process.</p>
                                        </div>
                                    {{/if}}


                                    <h5 class="card-title">Resident Information</h5>
                                    <div class="row">
                                        <div class="col-lg-4 col-md-4 label ">Full Name</div>
                                        <div class="col-lg-8 col-md-8 text-capitalize">{{resident.firstName}}
                                            {{resident.lastName}}
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-4 col-md-4 label">Resident ID</div>
                                        <div class="col-lg-8 col-md-8">{{resident.residentID}}</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-4 col-md-4 label">Facility</div>
                                        <div class="col-lg-8 col-md-8 text-capitalize">{{resident.facility}}</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-4 col-md-4 label">Custody Level</div>
                                        <div class="col-lg-8 col-md-8 text-capitalize">{{resident.custodyLevel}}</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-4 col-md-4 label">Out Date</div>
                                        <div class="col-lg-8 col-md-8 text-capitalize">{{formatDate resident.outDate}}
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-4 col-md-4 label">Resume Complete</div>
                                        <div class="col-lg-8 col-md-8 text-capitalize">{{resident.resumeIsComplete}}
                                        </div>
                                    </div>
                                    {{#if resident.resume.status}}
                                        <div class="row">
                                            <div class="col-lg-4 col-md-4 label">Resume Status</div>
                                            <div class="col-lg-8 col-md-8 text-capitalize">{{resident.resume.status}}
                                            </div>
                                        </div>
                                    {{/if}}
                                    <div class="row">
                                        <div class="col-lg-4 col-md-4 label">UTM</div>
                                        {{#if resident.unitTeam}}
                                            <div class="col-lg-8 col-md-8 text-capitalize">{{resident.unitTeam}}</div>
                                        {{else}}
                                            <div class="col-lg-8 col-md-8">Not Assigned</div>
                                        {{/if}}
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-4 col-md-4 label">Job Pool</div>
                                        {{#if resident.jobPool}}
                                            <div class="col-lg-8 col-md-8 text-capitalize">{{resident.jobPool}}</div>
                                        {{else}}
                                            <div class="col-lg-8 col-md-8">Not Assigned</div>
                                        {{/if}}
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-4 col-md-4 label">Status</div>
                                        {{#if resident.isActive}}
                                            <div class="col-lg-8 col-md-8 text-capitalize">Active - Incarcerated</div>
                                        {{else}}
                                            <div class="col-lg-8 col-md-8">Inactive - Not Incarcerated</div>
                                        {{/if}}
                                    </div>
                                    <hr>
                                    <button type="button" class="btn btn-info" data-bs-toggle="modal"
                                        data-bs-target="#editResident">Edit Resident</button>
                                </div>
                            </div>
                        </div>

                        {{!--======== RESUME TAB ========--}}
                        <div class="tab-pane fade {{#if (eq activeTab 'resume')}}show active{{/if}} profile-edit pt-3"
                            id="profile-edit">
                            <div class="card">
                                <div class="card-body pt-3">


                                    <!--======== Resume  Form ========== -->
                                    {{#if resident.resume.rejectionReason}}
                                        {{!-- if resume has been rejected, show the reason --}}
                                        <div class="text-center">
                                            <p class="text-danger">This resume has been rejected for being
                                                {{resident.resume.rejectionReason}}.
                                            </p>
                                        </div>
                                    {{else}}
                                        {{#if resident.resumeIsComplete}}
                                            {{!-- if resident has completed their resume --}}
                                            <form method="POST"
                                                action="/clearance/approveResume/{{resident.residentID}}">
                                                {{#unless (eq resident.resume.status "approved")}}

                                                    <div class="mb-3 text-center">
                                                        <p class="text-primary">Review resume and select job pool.</p>
                                                    </div>
                                                {{else}}
                                                    <div class="mb-3 text-center">
                                                        <p class="text-success">Resume approved by <span
                                                                class="text-capitalize">{{resident.resume.approvedBy}}</span>
                                                            on
                                                            {{formatDate resident.resume.approvalDate}}
                                                        </p>
                                                    </div>
                                                {{/unless}}
                                                {{!-- Resident First Name --}}
                                                <div class="row mb-3">
                                                    <label for="firstName"
                                                        class="col-md-4 col-lg-3 col-form-label">First
                                                        Name</label>
                                                    <div class="col-md-8 col-lg-9">
                                                        <input name="firstName" type="text"
                                                            class="form-control text-capitalize" id="firstName"
                                                            value="{{resident.firstName}}" readonly>
                                                    </div>
                                                </div>
                                                {{!-- Resident Last Name --}}
                                                <div class="row mb-3">
                                                    <label for="lastName" class="col-md-4 col-lg-3 col-form-label">Last
                                                        Name</label>
                                                    <div class="col-md-8 col-lg-9">
                                                        <input name="lastName" type="text"
                                                            class="form-control text-capitalize" id="lastName"
                                                            value="{{resident.lastName}}" readonly>
                                                    </div>
                                                </div>
                                                {{!-- Resident ID --}}
                                                <div class="row mb-3">
                                                    <label for="residentID"
                                                        class="col-md-4 col-lg-3 col-form-label">Resident
                                                        ID</label>
                                                    <div class="col-md-8 col-lg-9">
                                                        <input name="residentID" type="text"
                                                            class="form-control text-capitalize" id="residentID"
                                                            value="{{resident.residentID}}" readonly>
                                                    </div>
                                                </div>
                                                {{!-- Resident Custody Level --}}
                                                <div class="row mb-3">
                                                    <label for="custodyLevel"
                                                        class="col-md-4 col-lg-3 col-form-label">Custody
                                                        Level</label>
                                                    <div class="col-md-8 col-lg-9">
                                                        <input name="custodyLevel" type="text"
                                                            class="form-control text-capitalize" id="custodyLevel"
                                                            value="{{resident.custodyLevel}}" readonly>
                                                    </div>
                                                </div>
                                                {{!-- Resident Facility --}}
                                                <div class="row mb-3">
                                                    <label for="facility"
                                                        class="col-md-4 col-lg-3 col-form-label">Facility</label>
                                                    <div class="col-md-8 col-lg-9">
                                                        <input name="facility" type="text"
                                                            class="form-control text-capitalize" id="facility"
                                                            value="{{resident.facility}}" readonly>
                                                    </div>
                                                </div>
                                                {{!-- Resident Out Date --}}
                                                <div class="row mb-3">
                                                    <label for="outDate" class="col-md-4 col-lg-3 col-form-label">Out
                                                        Date</label>
                                                    <div class="col-md-8 col-lg-9">
                                                        <input name="outDate" type="text"
                                                            class="form-control text-capitalize" id="outDate"
                                                            value="{{formatDate resident.outDate}}" readonly>
                                                    </div>
                                                </div>
                                                {{!-- Unit Team Assigned --}}
                                                <div class="row mb-3">
                                                    <label for="unitTeam" class="col-md-4 col-lg-3 col-form-label">Unit
                                                        Team</label>
                                                    <div class="col-md-8 col-lg-9">
                                                        <input name="unitTeam" type="text"
                                                            class="form-control text-capitalize" id="unitTeam"
                                                            value="{{resident.unitTeam}}" readonly>
                                                    </div>
                                                </div>
                                                {{!-- work history input --}}
                                                <div class="row mb-3">
                                                    <label for="workHistory"
                                                        class="col-md-4 col-lg-3 col-form-label">Work
                                                        History</label>
                                                    <div class="col-md-8 col-lg-9">
                                                        <textarea name="workHistory" class="form-control"
                                                            id="workHistory" style="height: 100px"
                                                            readonly>{{resident.resume.workHistory}}</textarea>
                                                    </div>
                                                </div>
                                                {{!-- Certifications & Licenses input --}}
                                                <div class="row mb-3">
                                                    <label for="certifications"
                                                        class="col-md-4 col-lg-3 col-form-label">Certifications
                                                        &amp;
                                                        Licenses</label>
                                                    <div class="col-md-8 col-lg-9">
                                                        <textarea name="certifications" class="form-control"
                                                            id="certifications" style="height: 100px"
                                                            readonly>{{resident.resume.certifications}}</textarea>
                                                    </div>
                                                </div>
                                                {{!-- Higher Education --}}
                                                <div class="row mb-3">
                                                    <label for="education"
                                                        class="col-md-4 col-lg-3 col-form-label">Higher
                                                        Education</label>
                                                    <div class="col-md-8 col-lg-9">
                                                        <textarea name="education" class="form-control" id="education"
                                                            style="height: 100px"
                                                            readonly>{{resident.resume.education}}</textarea>
                                                    </div>
                                                </div>
                                                {{!-- Completed programs --}}
                                                <div class="row mb-3">
                                                    <label for="programs"
                                                        class="col-md-4 col-lg-3 col-form-label">Completed
                                                        Programs</label>
                                                    <div class="col-md-8 col-lg-9">
                                                        <textarea name="programs" class="form-control" id="programs"
                                                            style="height: 100px"
                                                            readonly>{{resident.resume.programs}}</textarea>
                                                    </div>
                                                </div>
                                                {{!-- US Citizen options --}}
                                                <div class="row mb-3">
                                                    <label for="legalCitizen"
                                                        class="col-md-4 col-lg-3 col-form-label">U.S.
                                                        Citizen</label>
                                                    <div class="col-sm-10">
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="radio"
                                                                name="legalCitizen" id="legalCitizen1" value="true"
                                                                {{#if resident.resume.legalCitizen}} checked{{/if}}
                                                                readonly>
                                                            <label class="form-check-label" for="legalCitizen1">
                                                                Yes
                                                            </label>
                                                        </div>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="radio"
                                                                name="legalCitizen" id="legalCitizen2" value="false"
                                                                {{#if (eq resident.resume.legalCitizen
                                                                false)}}checked{{/if}} readonly>
                                                            <label class="form-check-label" for="legalCitizen2">
                                                                No
                                                            </label>
                                                        </div>
                                                    </div>
                                                </div>
                                                {{!-- GED or diploma option --}}
                                                <div class="row mb-3">
                                                    <label for="hsGraduate" class=" col-form-label">GED or High
                                                        School Diploma</label>
                                                    <div class="col-sm-10">
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="radio"
                                                                name="hsGraduate" id="hsGraduate1" value="true" {{#if
                                                                resident.resume.hsGraduate}} checked{{/if}} readonly>
                                                            <label class="form-check-label" for="hsGraduate1">
                                                                Yes
                                                            </label>
                                                        </div>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="radio"
                                                                name="hsGraduate" id="hsGraduate2" value="false" {{#if
                                                                (eq resident.resume.hsGraduate false)}}checked{{/if}}
                                                                readonly>
                                                            <label class="form-check-label" for="hsGraduate2">
                                                                No
                                                            </label>
                                                        </div>
                                                    </div>
                                                </div>
                                                {{!-- Social Security card radio option --}}
                                                <div class="row mb-3">
                                                    <label for="sscard" class=" col-form-label">Social Security Card on
                                                        file?</label>
                                                    <div class="col-sm-10">
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="radio" name="sscard"
                                                                id="sscard1" value="true" {{#if resident.resume.sscard}}
                                                                checked{{/if}} readonly>
                                                            <label class="form-check-label" for="sscard1">
                                                                Yes
                                                            </label>
                                                        </div>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="radio" name="sscard"
                                                                id="sscard2" value="false" {{#if (eq
                                                                resident.resume.sscard false)}}checked{{/if}} readonly>
                                                            <label class="form-check-label" for="sscard2">
                                                                No
                                                            </label>
                                                        </div>
                                                    </div>
                                                </div>
                                                {{!-- birth certificate radio option --}}
                                                <div class="row mb-3">
                                                    <label for="birthCertificate" class=" col-form-label">Birth
                                                        Certificate on
                                                        file?</label>
                                                    <div class="col-sm-10">
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="radio"
                                                                name="birthCertificate" id="birthCertificate1"
                                                                value="true" {{#if resident.resume.birthCertificate}}
                                                                checked{{/if}} readonly>
                                                            <label class="form-check-label" for="birthCertificate1">
                                                                Yes
                                                            </label>
                                                        </div>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="radio"
                                                                name="birthCertificate" id="birthCertificate2"
                                                                value="false" {{#if (eq resident.resume.birthCertificate
                                                                false)}}checked{{/if}} readonly>
                                                            <label class="form-check-label" for="birthCertificate2">
                                                                No
                                                            </label>
                                                        </div>
                                                    </div>
                                                </div>

                                                {{!-- Resume Submit Button --}}

                                                {{#if (eq resident.resume.status "approved")}}
                                                    {{!-- if resume has already been approved, allow for rejection --}}
                                                    <div class="row mb-3">
                                                        <label for="jobPool"
                                                            class="col-md-4 col-lg-3 col-form-label">Job
                                                            Pool</label>
                                                        <div class="col-md-8 col-lg-9">
                                                            <input name="jobPool" type="text"
                                                                class="form-control text-capitalize"
                                                                value="{{resident.jobPool}}" readonly required>
                                                        </div>
                                                    </div>
                                                    <hr class="mb-3">
                                                    <div class="text-center">
                                                        <p class="text-success">Resume approved by <span
                                                                class="text-capitalize">{{resident.resume.approvedBy}}</span>
                                                            on
                                                            {{formatDate resident.resume.approvalDate}}
                                                        </p>
                                                        <button type="button" class="btn btn-danger mx-2"
                                                            data-bs-toggle="modal" data-bs-target="#rejectResume">Reject
                                                            Approval</button>
                                                    </div>
                                                {{else}}

                                                    {{!-- if resident needs to be approved, show job pool selection --}}
                                                    {{!-- Job Pool--}}
                                                    <div class="row mb-3">
                                                        <label for="jobPool"
                                                            class="col-md-4 col-lg-3 col-form-label text-primary">Job
                                                            Pool</label>
                                                        <div class="col-md-8 col-lg-9">
                                                            <select required name="jobPool" class="form-select"
                                                                aria-label="Job Pool">
                                                                <option value="">Select Job Pool</option>
                                                                <option value="Male Minimum 1 (Off-Site)">Male Minimum 1
                                                                    &lpar;Off-Site&rpar;</option>
                                                                <option value="Male Minimum 2 (On-Site)">Male Minimum 2
                                                                    &lpar;On-Site&rpar;
                                                                </option>
                                                                <option value="Male Medium/Maximum">Male Medium/Maximum
                                                                </option>
                                                                <option value="Female Minimum 1 (Off-Site)">Female
                                                                    Minimum 1
                                                                    &lpar;Off-Site&rpar;</option>
                                                                <option value="Female Minimum 2 (On-Site)">Female
                                                                    Minimum 2
                                                                    &lpar;On-Site&rpar;</option>
                                                                <option value="Female Medium/Maximum">Female
                                                                    Medium/Maximum</option>
                                                                <option
                                                                    value="Not Eligible: Medical Lay-In / Disciplinary Lay-In">
                                                                    Not
                                                                    Eligible: Medical Lay-In / Disciplinary Lay-In
                                                                </option>
                                                                <option value="PIE Employed">PIE Employed</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <hr>
                                                    <div class="row">
                                                        <div class="col-12 d-flex justify-content-between">
                                                            <button type="button" class="btn btn-danger mx-2"
                                                                data-bs-toggle="modal"
                                                                data-bs-target="#rejectResume">Reject Resume</button>
                                                            <button type="submit" class="btn btn-primary mx-2">Approve
                                                                Resume</button>

                                                        </div>
                                                    </div>
                                                {{/if}}
                                            </form>
                                        {{else}}
                                            <div class="text-center">
                                                {{!-- if resident has not completed their resume --}}
                                                <span class="text-center text-primary">This resident has not completed
                                                    their
                                                    resume.
                                                </span>
                                            </div>

                                        {{/if}}
                                    {{/if}}

                                    <!--============================= End Resume Form=================================== -->
                                </div>
                            </div>
                        </div>

                        {{!-- ====== Clearance Tab ========= --}}
                        <div class="tab-pane fade {{#if (eq activeTab 'clearance')}}show active{{/if}} profile-overview pt-3"
                            id="profile-clearance">
                            <div style="min-width: 570px;" class="card">
                                <div class="card-body pt-3">
                                    {{#if resident.isHired}}
                                        <div class="text-center">
                                            <p class="text-success">This resident is working as of {{formatDate
                                            resident.dateHired}}</p>
                                        </div>
                                    {{else}}
                                        {{#if (eq resident.workEligibility.status "approved")}}
                                            <div class="text-center">
                                                <p class="text-success">This resident is approved and eligible for
                                                    work.</p>
                                            </div>
                                        {{/if}}
                                    {{/if}}

                                    {{#if (eq resident.workEligibility.status "restricted")}}
                                        <div class="text-center">
                                            <p class="text-danger">This resident is not eligible
                                                to work due to restrictions.</p>
                                        </div>
                                    {{/if}}
                                    {{#if (eq resident.resume.status "approved")}}


                                        <h5 class="card-title">Clearance Status</h5>

                                        <!-- Clearance Status Contextual classes -->
                                        <ul class="list-group">
                                            <li class="list-group-item {{#if (eq resident.MedicalClearance.status 'none')}}list-group-item-secondary
                                                        {{else}}
                                                        {{#if (eq resident.MedicalClearance.status 'pending')}}
                                                        list-group-item-warning
                                                        {{else}}
                                                        {{#if (eq resident.MedicalClearance.status 'restricted')}}
                                                        list-group-item-danger
                                                        {{else}}
                                                        list-group-item-success
                                                        {{/if}}
                                                        {{/if}}
                                                        {{/if}}">
                                                {{!-- MEDICAL --}}
                                                <div class="row pt-3 pt-3">
                                                    <div class="col-3 label ">Medical</div>
                                                    <div class="clearanceCheck col-3 text-capitalize ">
                                                        {{resident.MedicalClearance.status}}
                                                    </div>
                                                    <div class="col-2  d-flex justify-content-between">
                                                        <button type="submit" class="btn btn-info "
                                                            data-route="/notification/requestClearance/{{resident.residentID}}/Medical"
                                                            data-category="Medical" data-bs-toggle="modal"
                                                            data-bs-target="#clearanceModal">
                                                            Request</button>
                                                    </div>
                                                    <div class="col-2">
                                                        <button id="" type="submit" class="btn btn-warning ms-2"
                                                            data-route="/clearance/editClearance/{{resident.residentID}}/Medical"
                                                            data-category="Medical" data-bs-toggle="modal"
                                                            data-bs-target="#editModal">Edit</button>
                                                    </div>
                                                    <div class="col-2">
                                                        <button id="" type="submit" class="btn btn-secondary ms-2"
                                                            data-route="/clearance/addNotes/{{resident.residentID}}/Medical"
                                                            data-category="Medical" data-bs-toggle="modal"
                                                            data-residentID="{{resident.residentID}}"
                                                            data-notes-category="Medical"
                                                            data-bs-target="#addNotes">Notes</button>
                                                    </div>
                                                </div>
                                            </li>

                                            <li class="list-group-item {{#if (eq resident.EAIClearance.status 'none')}}list-group-item-secondary
                                                        {{else}}
                                                        {{#if (eq resident.EAIClearance.status 'pending')}}
                                                        list-group-item-warning
                                                        {{else}}
                                                        {{#if (eq resident.EAIClearance.status 'restricted')}}
                                                        list-group-item-danger
                                                        {{else}}
                                                        list-group-item-success
                                                        {{/if}}
                                                        {{/if}}
                                                        {{/if}}">
                                                {{!-- EAI --}}
                                                <div class="row pt-3">
                                                    <div class="col-3 label">EAI</div>
