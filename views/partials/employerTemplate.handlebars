<header id="header" class="header fixed-top d-flex align-items-center">

    <div class="d-flex align-items-center justify-content-between">
        <a href="/employer/dashboard" class="logo d-flex align-items-center">
            <img src="/assets/img/favicon.png" alt="Kansas Correctional Industries">
            <span>KCI Private Industry</span>
        </a>
        <i class="bi bi-list toggle-sidebar-btn"></i>
    </div>

    <nav class="header-nav ms-auto">
        <ul class="d-flex align-items-center">
            <li class="nav-item dropdown">
                <a class="nav-link nav-icon" href="#" data-bs-toggle="dropdown">
                    <i class="bi bi-bell"></i>
                    {{#if notifications}}
                        <span class="badge bg-primary badge-number">{{countArrayItems notifications}}</span>
                    {{/if}}
                </a>
                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow notifications overflow-auto"
                    style="max-height: 400px;">
                    <li class="dropdown-header">
                        You have {{countArrayItems notifications}} new
                        {{#if (eq (countArrayItems notifications) 1)}}notification{{else}}notifications{{/if}}
                            <a href="/notification/notifications"><span
                                    class="badge rounded-pill bg-primary p-2 ms-2">View
                                    all</span></a>
                    </li>
                    <li>
                        <hr class="dropdown-divider">
                    </li>

                    {{#each notifications}}
                        <a href="/notification/markAsRead/{{this._id}}"
                            class="list-group-item list-group-item-action active mb-1" aria-current="true"
                            data-id="{{this._id}}">
                            <li class="notification-item">
                                <i class="bi {{this.icon}}"></i>
                                <div>
                                    <p>{{this.message}}</p>
                                </div>
                            </li>

                            <li>
                                <hr class="dropdown-divider">
                            </li>
                        </a>
                    {{/each}}
                    <li class="dropdown-footer">
                        <a href="/notification/notifications">Show all notifications</a>
                    </li>

                </ul>

            </li>
            <li class="nav-item dropdown pe-3">

                <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                    <img src="/assets/img/avatar.png" alt="Profile" class="rounded-circle">
                    <span class="d-none d-md-block dropdown-toggle ps-2 text-capitalize">{{user.firstName}}
                        {{user.lastName}}</span>
                </a>

                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                    <li class="dropdown-header">
                        <h6 class="text-capitalize">{{user.firstName}} {{user.lastName}}</h6>
                        <span id="userEmail">{{user.email}}</span>
                    </li>


                    <li>
                        <hr class="dropdown-divider">
                    </li>
                    <li>
                        <a class="dropdown-item d-flex align-items-center" href="/shared/helpDesk">
                            <i class="bi bi-question-circle"></i>
                            <span>Need Help?</span>
                        </a>
                    </li>
                    <li>
                        <hr class="dropdown-divider">
                    </li>
                    <li>
                        <a class="dropdown-item d-flex align-items-center" href="/logOut">
                            <i class="bi bi-box-arrow-right"></i>
                            <span>Sign Out</span>
                        </a>
                    </li>
                </ul>
            </li>
        </ul>
    </nav>
</header>

